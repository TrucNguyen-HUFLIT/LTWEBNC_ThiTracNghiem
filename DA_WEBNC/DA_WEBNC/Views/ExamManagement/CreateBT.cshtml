@model DA_WEBNC.Models.BaiThi

@{
    ViewBag.Title = "Thêm bài thi";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<link href="~/Content/style.css" rel="stylesheet" />
<link href="~/Content/style1.css" rel="stylesheet" />
<div class="body-content">
    <div class="container mt-3">
        <h2>Quản lý bài thi</h2>
        <br />
        <div class="content-header">
            <a href="@Url.Action("Index", "ExamManagement")" class="btn btn-default">Danh sách bài thi</a>
            <a href="@Url.Action("CreateBT", "ExamManagement")" class="btn btn-primary">Thêm bài thi</a>
        </div>
        <hr />
        <div class="add-Exam-item">
            <div class="add-Exam-item-item">
                <table>
                    @using (Html.BeginForm("CreateBT", "ExamManagement", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <tr>
                            <td><b>ID bài thi: </b></td>
                            <td><input type="text" name="IDBaiThi" value="@Model.IDBaiThi" readonly style="background-color: #e0e0e0; padding: 7px;" /></td>
                        </tr>
                        <tr>
                            <td><b>Tên bài thi: </b></td>
                            <td><input type="text" name="TenBaiThi" placeholder="Nhập tên bài thi" style=" padding: 7px;"/></td>
                        </tr>
                        <tr>
                            <td><b>Thời gian làm bài (phút): </b></td>
                            <td><input type="number" min="0" max="60" name="ThoiGianLamBai" value="30" style=" padding: 7px;" /></td>
                        </tr>
                        <tr>
                            <td colspan="2" class="text-center"><input type="submit" value="Thêm" class="btn btn-info" /></td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
    <br />
</div>

