
@{
    ViewBag.Title = "Thêm bài thi";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}
<link href="~/Content/style.css" rel="stylesheet" />
<link href="~/Content/style1.css" rel="stylesheet" />
<div class="body-content">
    <div class="container mt-3">
        <h2>Quản lý bài thi</h2>
        <br />
        <div class="content-header">
            <a href="@Url.Action("Index", "ExamManagement")"><button class="btn btn-default">Danh sách bài thi</button></a>
            <a href="@Url.Action("Create", "ExamManagement")"><button class="btn btn-primary">Thêm bài thi</button></a>
        </div>
        <hr />
        <div class="add-Exam-item">
            <div class="add-Exam-item-item">
                <table>
                    <tr>
                        <td><b>ID bài thi: </b></td>
                        <td><input type="text" name="" value="" readonly style="background-color: #aaa" /></td>
                    </tr>
                    <tr>
                        <td><b>Tên bài thi: </b></td>
                        <td><input type="text" name="" value="" placeholder="Nhập tên bài thi" /></td>
                    </tr>
                    <tr>
                        <td><b>Thời gian làm bài (phút): </b></td>
                        <td><input type="number" name="" value="" placeholder="60" /></td>
                    </tr>
                </table>
            </div>
            <hr />
            <div class="add-Exam-item-item">
                <h4 style="text-align: center">Danh sách câu hỏi</h4>
                <div style="display:flex; justify-content: center">
                    <div class="search-item">
                        <input type="text" name="" value="" placeholder="Nhập tên hoặc ID câu hỏi" />&nbsp<input type="submit" name="" value="Tìm kiếm" />
                    </div>
                </div>
                <br />
                <table>
                    <tr>
                        <th>STT</th>
                        <th>Tên câu hỏi</th>
