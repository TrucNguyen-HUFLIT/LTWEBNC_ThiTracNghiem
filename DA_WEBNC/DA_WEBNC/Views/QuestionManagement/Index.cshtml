@model IEnumerable<DA_WEBNC.Models.CauHoi>

@{
    ViewBag.Title = "Danh sách câu hỏi";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}
<link href="~/Content/style1.css" rel="stylesheet" />
<link href="~/Content/style2.css" rel="stylesheet" />

<div class="body-content">
    <h2>Danh sách câu hỏi</h2>
    <div class="body-content-item">
        @if (@ViewBag.Added != null)
        {
            <a href="@Url.Action("Index")" class="btn btn-primary">Danh sách câu hỏi</a>
        }
        else
        {
            <a href="@Url.Action("Create")" class="btn btn-primary">Thêm câu hỏi</a>
        }

        <hr />
        <table class="table">
            <tr>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.CauHoi1)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.A)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.B)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.C)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.D)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.DapAn)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CauHoi1)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.A)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.B)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.C)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.D)
                    </td>
                    <td class="text-center">
                        <b>@Html.DisplayFor(modelItem => item.DapAn)</b>
                    </td>
                    <td class="question-item-btn">
                        <button type="button" class="btn btn-warning">@Html.ActionLink("Sửa", "Edit", new { id = item.IDCauHoi })</button>
                    </td>
                </tr>
            }
        </table>
    </div>
    <br />
</div>
