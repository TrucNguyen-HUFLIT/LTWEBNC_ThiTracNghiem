@model IEnumerable<DA_WEBNC.Models.BaiThi>

@{
    ViewBag.Title = "Danh sách bài thi";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
    <link href="~/Content/style.css" rel="stylesheet" />
}
<div class="main-body">
    <div class="body-top">
        <h2>Danh sách các bài thi</h2>
        <hr />
    </div>
    <div class="body-main">
        @foreach (var item in Model)
        {
            <div class="item-exam">
                <div class="img-item-exam">
                    <img src="~/Content/Images/icon_ask.jpg" alt="Alternate Text" />
                </div>
                <div style="margin-left:20px">
                    <p>Bài thi</p>
                    <p>@item.TenBaiThi</p>
                </div>
                <div class="content-item-exam">
                    <p>Thời gian</p>
                    <p><b>@item.ThoiGianLamBai</b></p>
                </div>
                <div class="btn-item-exam">
                    <a href="@Url.Action("ExamTest", "Home", new { item.IDBaiThi })"><input class="btn btn-link" type="submit" value="Thi thử ngay >>" /></a>
                </div>
            </div>
        }
    </div>
    <hr />
</div>
