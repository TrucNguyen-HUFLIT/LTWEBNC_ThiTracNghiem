                        <li><input type="radio" name="dapAn" value="@item.B" />&nbsp;&nbsp;&nbsp; B.  @item.B</li>
                        <li><input type="radio" name="dapAn" value="@item.C" />&nbsp;&nbsp;&nbsp; C.  @item.C</li>
