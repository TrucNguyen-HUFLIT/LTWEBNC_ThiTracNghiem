                </div>
                count++;
            }
        }*@
        @if (Model.CauHoi != null)
        {
            using (Html.BeginForm("ExamTest", "Home", FormMethod.Post))
            {
                <input name="ThoiGianLamBai" value="@Model.BaiThi.ThoiGianLamBai" hidden />
                <input name="IDBaiThiHS" value="@Model.IDBaiThiHS" hidden />
                <input name="IDBaiThi" value="@Model.BaiThi.IDBaiThi" hidden />
                <input name="IDStudent" value="@Model.IDStudent" hidden />
                <input name="IDCauHoi" value="@Model.CauHoi.IDCauHoi" hidden />
                <input name="DapAn" value="@Model.CauHoi.DapAn" hidden />

                <div class="item-Test">
                    <h1>Câu hỏi:</h1>
                    <h5 style="font-size: 170%">@Model.CauHoi.CauHoi1</h5>
                    <br />
                    <ul>
                        <li>
                            <input type="radio" name="CauTraLoi" id="A" value="A" checked="checked"><label for="A">@Model.CauHoi.A</label>
                            <br>
                        </li>
                        <li>
                            <input type="radio" name="CauTraLoi" id="B" value="B"><label for="B">@Model.CauHoi.B</label>
                            <br>
                        </li>
                        <li>
                            <input type="radio" name="CauTraLoi" id="C" value="C"><label for="C">@Model.CauHoi.C</label>
                            <br>
                        </li>
                        <li>
                            <input type="radio" name="CauTraLoi" id="D" value="D"><label for="D">@Model.CauHoi.D</label>
                            <br>
                        </li>
                    </ul>
                </div>
                <input type="submit" value="Câu hỏi tiếp theo" class="btn btn-warning" style="margin-left:40%"/>
            }
        }
        else
        {
            <div class="item-Test">
                <h1>Bạn đã làm xong. Hãy nộp bài!</h1>
            </div>
        }

    </div>
</div>
