@model DA_WEBNC.Models.ExamTestViewModel

@{
    ViewBag.Title = "Làm bài thi";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}
<link href="~/Content/style.css" rel="stylesheet" />

<div class="main-body">
    <div class="body-top">
        <h2>@Model.BaiThi.TenBaiThi</h2>

        <div class="countdown-Exam">
            <p>Thời gian làm bài</p>
            <p> <span id="time">@Model.BaiThi.SoPhutLamBai</span> phút!</p>
            @*<input id="valueTime" type="text" value="@Model.BaiThi.SoPhutLamBai" hidden />*@
            @using (Html.BeginForm("Result", "Home", FormMethod.Post))
            {
                <input name="IDBaiThiHS" value="@Model.IDBaiThiHS" hidden />

                @*<a href="@Url.Action("ExamResult", "ProfileUser")" class="btn btn-success">Nộp bài</a>*@
                if (Model.CauHoi == null)
                {
                    <input type="submit" value="Nộp bài" class="btn btn-success" />
                }
            }
            <hr />
            @if (@ViewBag.Testing == null)
            {
                <a href="@Url.Action("ExamList", "Home")" class="btn btn-danger">Thoát</a>
            }
        </div>
        <hr />
    </div>
