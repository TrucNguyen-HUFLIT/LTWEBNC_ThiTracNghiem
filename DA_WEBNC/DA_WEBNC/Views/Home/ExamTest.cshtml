        @if (Model.CauHoi != null)
        {
            using (Html.BeginForm("ExamTest", "Home", FormMethod.Post))
            {
                <input name="ThoiGianLamBai" value="@Model.BaiThi.ThoiGianLamBai" hidden />
                <input name="IDBaiThiHS" value="@Model.IDBaiThiHS" hidden />
                <input name="IDBaiThi" value="@Model.BaiThi.IDBaiThi" hidden />
                <input name="IDStudent" value="@Model.IDStudent" hidden />
                <input name="IDCauHoi" value="@Model.CauHoi.IDCauHoi" hidden />
                <input name="DapAn" value="@Model.CauHoi.DapAn" hidden />

                <div class="item-Test">
                    <h4>Câu hỏi:</h4>
                    <h5 style="font-size: 110%">@Model.CauHoi.CauHoi1</h5>
                    <ul>
                        <li><input type="radio" name="CauTraLoi" value="A" />&nbsp;&nbsp;&nbsp; A.  @Model.CauHoi.A</li>
                        <li><input type="radio" name="CauTraLoi" value="B" />&nbsp;&nbsp;&nbsp; B.  @Model.CauHoi.B</li>
                        <li><input type="radio" name="CauTraLoi" value="C" />&nbsp;&nbsp;&nbsp; C.  @Model.CauHoi.C</li>
                        <li><input type="radio" name="CauTraLoi" value="D" />&nbsp;&nbsp;&nbsp; D.  @Model.CauHoi.D</li>
                    </ul>
                </div>

                <input type="submit" value="Câu hỏi tiếp theo" class="btn btn-info" style="margin-left:45%" />

            }
        }
        else
        {
            <div class="item-Test">
                <h1>Bạn đã làm xong. Hãy nộp bài!</h1>
            </div>
        }

    </div>
</div>
