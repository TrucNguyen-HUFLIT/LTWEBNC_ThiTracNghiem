
@{
    Layout = null;
}
@model DA_WEBNC.Models.LoginModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trắc nghiệm Online | Quên mật khẩu</title>
    <link href="~/Content/login.css" rel="stylesheet">
</head>
<body>
    <div class="wrapper fadeInDown">
        <br />
        <div id="formContent">
            <!-- Login Form -->
            @using (Html.BeginForm("Login", "Login", FormMethod.Post))
            {
                <span class="text-danger">@ViewBag.error</span>
                <br />
                <input type="text" id="Email" class="fadeIn second" name="Email" placeholder="Nhập email">

                <div>
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>

                <input type="submit" value="Cấp lại mật khẩu mới" class="fadeIn sixth text_color fadeIn fourth" />
            }
            <!-- Remind Passowrd -->
        </div>
    </div>
</body>
</html>
