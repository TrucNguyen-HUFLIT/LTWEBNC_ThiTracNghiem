@model IEnumerable<DA_WEBNC.Models.HocSinh>

@{
    ViewBag.Title = "Danh sách Học sinh";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}


<link href="~/Content/style1.css" rel="stylesheet" />
<link href="~/Content/style2.css" rel="stylesheet" />

<div class="body-content">
    <h2>Danh sách Học sinh</h2>
    <br /> <br />
    <div class="body-content-item">
        <div class="container-fluid">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" style="font-size:17px" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th class="text-center">
                                        @Html.DisplayNameFor(model => model.IDStudent)
                                    </th>
                                    <th class="text-center">
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th class="text-center">
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th class="text-center">
                                        @Html.DisplayNameFor(model => model.Avatar)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center" style="padding-top:40px">
                                            @Html.DisplayFor(modelItem => item.IDStudent)
                                        </td>
                                        <td class="text-center" style="padding-top:40px">
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td class="text-center" style="padding-top:40px">
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td class="text-center">
                                            <img src="@item.Avatar" alt="Alternate Text" width="100" height="100" />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <br />
</div>
